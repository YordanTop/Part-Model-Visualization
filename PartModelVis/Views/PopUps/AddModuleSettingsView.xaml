<Window x:Class="PartModelVis.Views.PopUps.AddModuleSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartModelVis.Views.PopUps"
        xmlns:vm="clr-namespace:PartModelVis.ViewModels"
        d:DataContext="{d:DesignInstance vm:AddModuleSettingsViewModel}"
        mc:Ignorable="d"
        Title="SettingsView" Height="600" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF4C82AB">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!--Title -->
        <Label Content="Add new module for visualization!" FontSize="30" Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <!-- Module variant-->

            <TextBlock
           FontSize="25"
           Padding="10"
           TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="1">
    
        <Run Text="Module variant:" />
            </TextBlock>

        <TextBox Text="{Binding ModuleConfiguration.Variant, Mode=TwoWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="50" FontSize="30" Margin="10,10,10,10"  Grid.ColumnSpan="2" Grid.Row="2"/>

        <!-- Module Car line-->
        <TextBlock
           FontSize="25"
           Padding="10"
           TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="3">
    
        <Run Text="Module car line:" />
        </TextBlock>

        <TextBox Text="{Binding ModuleConfiguration.CarLine, Mode=TwoWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="50" FontSize="30" Margin="10,10,10,10"  Grid.ColumnSpan="2" Grid.Row="4"/>


        <!-- Module config-->

        <TextBlock
           FontSize="25"
           Padding="10"
           TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="5">
    
        <Run Text="Module path configuration:" />
        </TextBlock>

        <Button Grid.Column="1" Grid.Row="5" Margin="0,10,10,0" Width="100"  HorizontalAlignment="Right" Command="{Binding SelectInformationFilePathCommand}">Select Module</Button>

        <TextBox Text="{Binding ModuleConfiguration.InformationFile, Mode=TwoWay}" HorizontalAlignment="Left" Width="460" Margin="10,10,5,10" VerticalAlignment="Stretch" FontSize="30"  Grid.ColumnSpan="2" Grid.Row="6"/>


        <Button Grid.Column="1" Grid.Row="6" Margin="0,10,10,10" Width="100"  HorizontalAlignment="Right" Command="{Binding CreateModuleCommand}">Create Module</Button>

        <!--Bottom Buttons-->

        <Button Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" Margin="5,10,10,10" Command="{Binding StartVisualCommand}">Start Visualization</Button>

    </Grid>
</Window>
