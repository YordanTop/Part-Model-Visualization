<UserControl x:Class="PartModelVis.Views.PopUps.ImageAttributesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviorsPath="clr-namespace:PartModelVis.Behaviors"
             xmlns:local="clr-namespace:PartModelVis.Views"
             xmlns:vm="clr-namespace:PartModelVis.ViewModels"
             d:DataContext="{d:DesignInstance vm:ImageAttributesViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Height="50" Width="700" VerticalAlignment="Bottom">
        <Border CornerRadius="20">

            <StackPanel Background="White" Orientation="Horizontal" HorizontalAlignment="Center" >

                <!-- Scale panel -->

                <TextBlock
                   FontSize="25"
                   Padding="10,5,10,10"
                   TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center">
    
                    <Run Text="Width:" />
                </TextBlock>

                <TextBox Margin="0,5,0,0"  Width="50" Height="30" FontSize="20" VerticalAlignment="Center" 
                         Text="{Binding PartImage.Width, Mode=TwoWay }">
                    <i:Interaction.Behaviors>
                        <behaviorsPath:IntegerOnlyTextBoxBehavior />
                    </i:Interaction.Behaviors>
                </TextBox>

                <TextBlock
                   FontSize="25"
                   Padding="10,5,10,10"
                   TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center">
    
                    <Run Text="Height:" />
                </TextBlock>

                <TextBox Margin="0,5,0,0"  Width="50" Height="30" FontSize="20" VerticalAlignment="Center"
                         Text="{Binding PartImage.Height, Mode=TwoWay}">
                    <i:Interaction.Behaviors>
                        <behaviorsPath:IntegerOnlyTextBoxBehavior />
                    </i:Interaction.Behaviors>
                </TextBox>

                <!-- Rotation panel -->

                <TextBlock
                    FontSize="25"
                    Padding="10,5,10,10"
                    TextWrapping="Wrap" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
    
                     <Run Text="Angle rotation:" />
                                </TextBlock>

                <Slider Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Maximum="360" Cursor="Hand"
                        Value="{Binding PartImage.Rotation, Mode=TwoWay}"/>


            </StackPanel>
        </Border>
    </Grid>
</UserControl>
