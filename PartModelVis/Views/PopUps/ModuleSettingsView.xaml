<Window x:Class="PartModelVis.Views.PopUps.ModuleSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartModelVis.Views.PopUps"
        xmlns:vm="clr-namespace:PartModelVis.ViewModels"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:ModuleSettingsViewModel}"
        Title="CreateModelSettingsView" MinHeight="450" MinWidth="800" Closing="Window_Closing">
    
    <Grid Height="Auto" Width="Auto">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!--Background-->        
        <Border Grid.Column="0" Grid.RowSpan="3">
            <Border.Background>
                <SolidColorBrush Color="#FF4C82AB"/>
            </Border.Background>

        </Border>
        
        <!--Title-->

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">Module configuration.</TextBlock>
        
        <!--Module info configuration panel-->
        <Border CornerRadius="10" Margin="45,5,45,0" Grid.Row="1">
            <Border.Background>
                <SolidColorBrush Color="White"/>
            </Border.Background>
            <DataGrid x:Name="ModuleDataGrid" ItemsSource="{Binding ModuleAlternativeProperties}" AutoGenerateColumns="False" VirtualizingPanel.IsVirtualizing="True" FontSize="20" Margin="7" Background="White"
                    >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" FontSize="20"/>
                    <DataGridTextColumn Header="File Name Property" Binding="{Binding FilePropertyName}" Width="*" FontSize="20"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" FontSize="20"/>
                    <DataGridTextColumn Header="Picture Path" Binding="{Binding PicturePath}" Width="*" FontSize="20"/>
                </DataGrid.Columns>

                <!--Loading trigger-->
               <!-- <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding SaveChangesCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                -->
            </DataGrid>


        </Border>
        
        <!--Save button-->

        <Button Grid.Row="2" Width="auto" Margin="45,5,45,5" Background="White" FontSize="20" Command="{Binding SaveChangesCommand}" >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                CornerRadius="10" 
                
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template> Save module configuration</Button>

    </Grid>
</Window>
